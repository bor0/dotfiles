#!/bin/bash
disk=$DEV_BASE
ramfs_size_mb=2048
ramfs_size_sectors=$((${ramfs_size_mb}*1024*1024/512))
mydev=`hdid -nomount ram://$ramfs_size_sectors`

newfs_hfs -v ramdisk $mydev
mkdir -p $disk
mount -t hfs $mydev $disk

mkdir -p $disk/sugar1.com/
mkdir -p $disk/sugar2.com/
mkdir -p $disk/sugar3.com/
mkdir -p $disk/db/

chown boro:staff $disk
chmod -R 777 $disk

# create mysql empty db
mysqld --initialize --user=root --init-file=$HOME/.mysql_init &> /dev/null
chown -R boro:staff $disk/db
